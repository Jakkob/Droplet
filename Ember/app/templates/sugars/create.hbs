<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 well">
	<form {{ action 'createSugar' newReading on="submit" }}>
		<h4 class="text-center">Select a Glucose level:</h4>
		<div class="center-block" style="width:80%;">
			{{sugar-dial value=newReading}}

			{{newReading}}
		</div>
		<button type="submit" class="btn btn-success center-block" >Submit</button>
	</form>
</div>