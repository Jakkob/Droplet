<div class="row">
	<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 well who">
		<form {{action "createUser" on="submit"}}>
		  <div class="form-group">
		    <label for="email">E-mail</label><br />
		    {{input class="form-control" value=email placeholder="E-mail" type="text" name="email"}}
		  </div>
		
		  <div class="form-group">
		    <label for="password">Password</label><br />
		    {{input class="form-control" value=password placeholder="Password" type="password" name="password"}}
		  </div>

		  <div class="form-group">
		    <label for="password-confirmation">Confirm Password</label><br />
		    {{input class="form-control" value=passwordConfirmation placeholder="Confirm Password" type="password" name="passwordConfirmation"}}
		  </div>
		
		  <div>
		    <button type="submit">Log in</button>
		  </div>
		</form>
	</div>
</div>